<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.cono.YMCA.TweetActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="255dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="8dp">
        <TextView
            android:id="@+id/lbladsoft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inserta tu rutina"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.184" />
        <EditText
            android:id="@+id/edtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Nombre de la rutina"
            android:inputType="textShortMessage"
            tools:layout_editor_absoluteX="68dp"
            tools:layout_editor_absoluteY="91dp" />
        <EditText
            android:id="@+id/edtDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Descripcion.."
            android:ems="10"
            android:inputType="textImeMultiLine"
            tools:layout_editor_absoluteX="153dp"
            tools:layout_editor_absoluteY="94dp" />
        <EditText
            android:id="@+id/edtUrlImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="https://segundoparcial-christian.appspot.com/images/mx-logo.png"
            android:ems="10"
            android:inputType="textImeMultiLine"
            tools:layout_editor_absoluteX="153dp"
            tools:layout_editor_absoluteY="94dp" />
        <Button
            android:id="@+id/btnTweet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Insert routine"
            tools:layout_editor_absoluteX="127dp"
            tools:layout_editor_absoluteY="198dp" />
    </LinearLayout>



</android.support.constraint.ConstraintLayout>
